    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CodigoMateria
            </td>
            <td>
                @item.NombreMateria
            </td>
            <td>
                @item.HorasTotales
            </td>
            <td>
                <a asp-action="AgregarOEditar" asp-route-id="@item.Id"><i class="fas fa-marker fa-lg"></i>Editar</a>
                <a asp-action="Eliminar" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash-alt fa-lg"></i>Borrar</a>
            </td>
        </tr>
    }
    </tbody>
