
@model List<Materia>

@{
}

<h1>Materias</h1>
<hr />
<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayName( "CÃ²digo Materia")
        </th>
        <th>
            @Html.DisplayName( "Nombre de la Materia")
        </th>
        <th>
            @Html.DisplayName( "Total de horas")
        </th>
        <th>
            <a asp-action="AgregarOEditar" class="btn btn-outline-success"><i class="fas fa-plus-square"></i> Agregar</a>
